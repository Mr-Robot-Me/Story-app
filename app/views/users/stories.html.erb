<h1 class="center-text">User Profile and Stories list</h1><br>

<hr class="divider">

<div id="users">
	
	<h3><%= @user.firstname %> <%= @user.lastname %></h3>
	<h5><%= @user.date_of_birth %></h5>
	<h5><%= @user.occupation %></h5>
	<h5><%= @user.hobbies %></h5>
	<h5><%= @user.about_me %></h5>
	
</div><br>

<hr class="divider">

<h2>Check out all my cool stories below !</h2>

<div id="stories">
	<% @stories.each do | story | %>
		<p><%= story.title %></p>
		<p><%= story.content %></p>
	<% end %>
</div>